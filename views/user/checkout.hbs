    <script>
      document.addEventListener('DOMContentLoaded', function () {
        const submitAddressBtn = document.getElementById('submitAddressBtn');

        if (submitAddressBtn) {
            submitAddressBtn.addEventListener('click', async () => {
                resetErrorMessages();

                if (validateForm()) {
                    try {
                        const name = document.getElementById('name').value;
                        const email = document.getElementById('email').value;
                        const mobileNo = document.getElementById('mobileNo').value;
                        const pinCode = document.getElementById('pincode').value;
                        const address = document.getElementById('address').value;
                        const locality = document.getElementById('locality').value;
                        const city = document.getElementById('city').value;
                        const state = document.getElementById('state').value;
                        const saveAddressAs = document.getElementById('home').checked ? 'Home' : 'Work';

                        
                        modal.show();

                        const response = await axios.post('/users/profile', {
                            name,
                            mobileNo,
                            email,
                            pinCode,
                            address,
                            locality,
                            city,
                            state,
                            saveAddressAs,
                        });

                        console.log('Address added:', response.data);
                        modal.hide();
                    } catch (error) {
                        console.error('Error adding address:', error);
                    }
                }
            });
        }
    });

 function validateName(name) {
            return name.trim() !== '';
        }

            function validateMobileNo(mobileNo) {
            return /^[0-9]{10}$/.test(mobileNo);
        }

            function validateEmail(email) {
            return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email);
        }

            function validatePincode(pincode) {
            return /^[0-9]{6}$/.test(pincode);
        }

            function validateAddress(address) {
            return address.trim() !== '';
        }

            function validateLocality(locality) {
            return locality.trim() !== '';
        }

    function resetErrorMessages() {
            if (!validateName(nameInput.value)) {
                showError(nameInput, 'Please enter a valid name.');
            }

            if (!validateMobileNo(mobileNoInput.value)) {
                showError(mobileNoInput, 'Please enter a valid mobile number.');
            }

            if (!validateEmail(emailInput.value)) {
                showError(emailInput, 'Please enter a valid email address.');
            }

            if (!validatePincode(pincodeInput.value)) {
                showError(pincodeInput, 'Please enter a valid pin code.');
            }

            if (!validateAddress(addressInput.value)) {
                showError(addressInput, 'Please enter a valid address.');
            }

            if (!validateLocality(localityInput.value)) {
                showError(localityInput, 'Please enter a valid locality/town.');
            }

            if (!validateCity(cityInput.value)) {
                showError(cityInput, 'Please enter a valid city/district.');
            }

            if (!validateState(stateInput.value)) {
                showError(stateInput, 'Please enter a valid state.');
            }

            if (!validateRadio(homeRadio) && !validateRadio(workRadio)) {
                showError(homeRadio, 'Please select Home or Work.');
            showError(workRadio, 'Please select Home or Work.');
            }

            
            if (!hasErrors()) {
                console.log('Form submitted successfully!');
            }    }

    </script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const defaultAddressRadios = document.querySelectorAll('.default-address-radio');

            defaultAddressRadios.forEach(function (radio) {
                radio.addEventListener('change', function () {
                    const profileId = radio.closest('.address-container').getAttribute('data-profile-id');
                    setAsDefaultAddress(profileId);
                });
            });

            function setAsDefaultAddress(profileId) {
                defaultAddressRadios.forEach(function (radio) {
                    radio.checked = false;
                });

                const selectedRadio = document.querySelector(`.address-container[data-profile-id="${profileId}"] .default-address-radio`);
                if (selectedRadio) {
                    selectedRadio.checked = true;
                }
                console.log(`Set default address for profile ${profileId}`);
            }
        });

    </script>

